# ETF网格交易工具 - 生产环境配置

# 应用配置
FLASK_ENV=production
HOST=0.0.0.0
PORT=5001

# Tushare配置 (必须配置真实token)
# 获取方式：https://tushare.pro/register
# 注意：必须配置有效的token
TUSHARE_TOKEN=your_real_tushare_token_here

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# 性能配置
WORKERS=4
THREADS=2
TIMEOUT=30

# 监控配置
HEALTH_CHECK_INTERVAL=30

# CORS配置 (生产环境应该配置具体域名)
ALLOWED_ORIGINS=*

# 其他配置
DEBUG=False
TESTING=False
